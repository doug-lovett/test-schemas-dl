{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/searchSummary",
    "type": "array",
    "title": "The PPR Search Summary Results List Schema",
    "definitions": {
        "searchResult": {
            "type": "object",
            "properties": {
                "matchType": {
                    "type": "string",
                    "maxLength": 10,
                    "enum": ["SIMILAR", "EXACT"],
                    "description": "Specifies how closely the result matches the query criteria."
                },
                "registrationNumber": {
                    "type": [ "string", "null" ],
                    "minLength": 1,
                    "maxLength": 12,
                    "description": "The registration number for a Financing Statement, Change Statement, or Amendment Statement. Included if searching by registration number. Identical to baseRegistrationNumber if it is for a Financing Statement."
                },
                "baseRegistrationNumber": {
                    "type": [ "string", "null" ],
                    "minLength": 1,
                    "maxLength": 12,
                    "description": "The Base Registration Number uniquely identifies a Financing Statement. Included for draft Amendment and Change Statements."
                },
                "registrationType": {
                    "type": "string",
                    "maxLength": 2,
                    "enum": ["SA", "RL", "FR", "LT", "MH", "SG", "FL", "FA", "FS", "MR"],
                    "description": "Specifies the type of Financing Statement."
                },
                "debtor": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/party"
                },
                "vehicleCollateral": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/vehicleCollateral"
                },
                "createDateTime": {
                    "type": [ "string", "null" ],
                    "format": "date-time",
                    "description": "Generated by the PPR system, the date and time the financing statement is created."
                }
            },
            "required": [
                "matchType",
                "registrationType",
                "baseRegistrationNumber",
                "createDateTime"
            ]
        }
    },
    "items": {
        "$ref": "#/definitions/searchResult"
    }
}