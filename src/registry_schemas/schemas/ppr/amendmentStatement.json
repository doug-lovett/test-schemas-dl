{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/amendmentStatement",
    "type": "object",
    "title": "The PPR Amendment Statement Schema",
    "properties": {
        "statementType": {
            "type": "string",
            "maxLength": 20,
            "enum": ["AMENDMENT_STATEMENT"]
        },
        "baseRegistrationNumber": {
            "type": "string",
            "minLength": 1,
            "maxLength": 12,
            "description": "The Base Registration Number uniquely identifies a Financing Statement."
        },
        "changeType": {
            "type": "string",
            "maxLength": 2,
            "enum": ["AM", "CO"],
            "description": "Type of change. Either AM for Amendment or CO for Court Order."
        },
        "clientReferenceId": {
            "type": [ "string", "null" ],
            "maxLength": 20,
            "description": "An optional client reference identifier associated with a change. Provided to facilitate client tracking of PPR activity."
        },
        "documentId": {
            "type": [ "string", "null" ],
            "maxLength": 10,
            "description": "Optional draft document identifier if the Amendment is in a draft state and has not yet been registered. If included when creating the statement the draft will be deleted."
        },
        "baseDebtor": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/baseDebtor"
        },
        "registeringParty": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/party"
        },
        "description": {
            "type": "string",
            "maxLength": 1000,
            "description": "A brief note explaining the purpose of the amendment."
        },
        "courtOrderInformation": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/courtOrder"
        },
        "removeTrustIndenture": {
            "type": "boolean",
            "description": "Include only if removing a trust indenture."
        },
        "addTrustIndenture": {
            "type": "boolean",
            "description": "Include only if adding a trust indenture."
        },
        "deleteSecuredParties": {
            "type": [ "array", "null" ],
             "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/party"
            }
        },
        "addSecuredParties": {
            "type": [ "array", "null" ],
             "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/party"
            }
        },
        "deleteDebtors": {
            "type": [ "array", "null" ],
            "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/party"
            }
        },
        "addDebtors": {
            "type": [ "array", "null" ],
            "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/party"
            }
        },
        "deleteVehicleCollateral": {
            "type": [ "array", "null" ],
            "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/vehicleCollateral"
            }
        },
        "addVehicleCollateral": {
            "type": [ "array", "null" ],
            "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/vehicleCollateral"
            }
        },
        "deleteGeneralCollateral": {
            "type": [ "array", "null" ],
            "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/generalCollateral"
            }
        },
        "addGeneralCollateral": {
            "type": [ "array", "null" ],
            "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/generalCollateral"
            }
        },
        "createDateTime": {
            "type": "string",
            "format": "date-time",
            "description": "Generated by the PPR system and included in a response, the date and time a record is created in the system."
        },
        "amendmentRegistrationNumber": {
            "type": "string",
            "minLength": 1,
            "maxLength": 12,
            "description": "Generated by the PPR system and included in a success response, the PPR system amendment record identifer."
        },
        "payment": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/payment"
        }
    },
    "anyOf":[
        {
            "properties": {
                "changeType": { "const": "CO" }
            },
            "required": [
                "baseRegistrationNumber",
                "registeringParty",
                "baseDebtor",
                "courtOrderInformation"
            ]
        },
        {
            "required": [
                "changeType",
                "baseRegistrationNumber",
                "registeringParty",
                "baseDebtor"
                ]
        },
        {
            "required": [
                "changeType",
                "baseRegistrationNumber",
                "registeringParty",
                "createDateTime",
                "amendmentRegistrationNumber",
                "payment"
            ]
        }
    ]
}