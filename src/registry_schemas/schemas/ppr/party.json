{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/party",
    "type": "object",
    "title": "The PPR Party Schema",
    "definitions": {},
    "properties": {
        "partyId": {
            "type": "integer",
            "minimum": 1,
            "description": "The unique identifier generated by the PPR system for the party record. Returned in the API responses for Debtors and Secured Parties, it is required in requests when removing or modifying Debtors or Secured Parties with an Amendment Statement or a Change Statement."
        },
        "code": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20,
            "description": "Registering or Secured Party''s PPR Client Code.  If supplied, name (person or business), address, and email address do not need to be supplied."
        },
       "businessName": {
            "type": "string",
            "maxLength": 150,
            "description": "Legal business name."
        },
        "personName": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/personName"
        },
        "address": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/address"
        },
        "birthDate": {
            "type": "string",
            "format": "date",
            "description": "Debtor date of birth in ISO 8601 format YYYY-MM-DD."
        },
        "emailAddress": {
            "type": "string",
            "format": "email",
            "maxLength": 250,
            "description": "The email address of the individual or business."
        }
    },
    "anyOf":[
        {
            "required": [
                "businessName",
                "address"
            ]
        },
        {
            "required": [
                "personName",
                "address"
            ]
        },
        {
            "required": [
                "businessName",
                "partyId"
            ]
        },
        {
            "required": [
                "personName",
                "partyId"
            ]
        },
        {
            "required": [
            "code"
            ]
        }
      ]
    }
