{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/renewalStatement",
    "type": "object",
    "title": "The PPR Renewal Statement Schema",
    "properties": {
        "statementType": {
            "type": "string",
            "maxLength": 20,
            "enum": ["RENEWAL_STATEMENT"]
        },
        "baseRegistrationNumber": {
            "type": "string",
            "minLength": 1,
            "maxLength": 12,
            "description": "The Base Registration Number uniquely identifies a Financing Statement."
        },
        "clientReferenceId": {
            "type": [ "string", "null" ],
            "maxLength": 20,
            "description": "An optional client reference identifier associated with a change. Provided to facilitate client tracking of PPR activity."
        },
        "baseDebtor": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/baseDebtor"
        },
        "registeringParty": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/common/party"
        },
        "expiryDate": {
            "type": "string",
            "format": "date-time",
            "description": "The updated date upon which the financing statement will expire, in the ISO 8601 format YYYY-MM-DDThh:mm:ssTZD."
        },
        "courtOrderInformation": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/courtOrder"
        },
        "createDateTime": {
            "type": "string",
            "format": "date-time",
            "description": "Generated by the PPR system and included in a response, the date and time a record is created in the system in the ISO 8601 format YYYY-MM-DDThh:mm:ssTZD."
        },
        "renewalRegistrationNumber": {
            "type": "string",
            "minLength": 1,
            "maxLength": 12,
            "description": "Generated by the PPR system and included in a success response, the PPR system renewal record identifer."
        },
        "payment": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/common/paymentReference"
        }
    },
    "oneOf":[
        {
            "required": [
                "baseRegistrationNumber",
                "registeringParty",
                "baseDebtor",
                "expiryDate"
            ]
        },
        {
            "required": [
                "baseRegistrationNumber",
                "registeringParty",
                "baseDebtor",
                "courtOrderInformation"
            ]
        },
        {
            "required": [
                "baseRegistrationNumber",
                "registeringParty",
                "expiryDate",
                "createDateTime",
                "renewalRegistrationNumber",
                "payment"
            ]
        }
    ]
}