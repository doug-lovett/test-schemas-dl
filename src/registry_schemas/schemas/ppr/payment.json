{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/payment",
    "type": "object",
    "title": "The PPR Payment Schema",
    "properties": {
        "invoiceId": {
            "type": "string",
            "minLength": 4,
            "maxLength": 20,
            "description": "Unique identifier of the payment transaction."
        },
        "receipt": {
            "type": "string",
            "minLength": 12,
            "maxLength": 250,
            "description": "Pay API path to obtain the payment receipt."
        }
    },
    "required": [
        "invoiceId",
        "receipt"
    ]
}