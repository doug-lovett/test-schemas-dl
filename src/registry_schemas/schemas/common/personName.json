{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/common/personName",
    "type": "object",
    "title": "The Common Individual Name Schema",
    "properties": {
        "first": {
            "type": "string",
            "maxLength": 50
        },
        "last": {
            "type": "string",
            "maxLength": 50
        },
        "middle": {
            "type": "string",
            "maxLength": 50,
            "description": "Second given name or middle name or middle name initial."
        }
    },
    "required": [
        "first",
        "last"
    ]
}
