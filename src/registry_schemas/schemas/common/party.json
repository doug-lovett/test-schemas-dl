{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/common/party",
    "type": "object",
    "title": "party",
    "definitions": {},
    "properties": {
        "partyId": {
            "type": "integer",
            "minimum": 1,
            "description": "The unique identifier generated by the system for the party record. Returned in the API responses for Debtors and Secured Parties, it is required in requests when removing or modifying Debtors or Secured Parties with an Amendment Statement or a Change Statement."
        },
        "code": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20,
            "description": "Registering or Secured Party''s Client Code. If provided, name (person or business), address, and email address do not need to be supplied."
        },
       "businessName": {
            "type": "string",
            "maxLength": 150,
            "description": "Legal business name."
        },
        "personName": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/common/personName"
        },
        "address": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/common/address"
        },
        "birthDate": {
            "type": "string",
            "format": "date-time",
            "description": "Debtor date of birth in ISO 8601 format YYYY-MM-DDThh:mm:ssTZD (eg 1997-07-16T19:20:30+01:00)."
        },
        "emailAddress": {
            "type": "string",
            "format": "email",
            "maxLength": 250,
            "description": "The email address of the individual or business."
        }
    },
    "anyOf":[
        {
            "required": [
                "businessName",
                "address"
            ]
        },
        {
            "required": [
                "personName",
                "address"
            ]
        },
        {
            "required": [
                "businessName",
                "partyId"
            ]
        },
        {
            "required": [
                "personName",
                "partyId"
            ]
        },
        {
            "required": [
            "code"
            ]
        }
      ]
    }
